{
    "builds":  [
                   {
                       "src":  "public/**",
                       "use":  "@vercel/static"
                   },
                   {
                       "src":  "src/api/server.js",
                       "use":  "@vercel/node"
                   }
               ],
    "routes":  [
                   {
                       "src":  "/",
                       "dest":  "/public/index.html"
                   },
                   {
                       "src":  "/api/(.*)",
                       "dest":  "src/api/server.js"
                   },
                   {
                       "src":  "/(health|metrics|features)",
                       "dest":  "src/api/server.js"
                   }
               ],
    "version":  2
}
